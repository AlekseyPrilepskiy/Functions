internal class Program
{
    private static void Main(string[] args)
    {
        int maxHealth = 10;
        int currentHealth = 3;
        int healthPositionX = 0;
        int healthPositionY = 0;

        string nameHealth = " HP";

        int maxMana = 10;
        int currentMana = 7;
        int manaPositionX = 0;
        int manaPositionY = 1;

        string nameMana = " MP";

        ConsoleColor healthColor = ConsoleColor.Green;
        ConsoleColor manaColor = ConsoleColor.DarkBlue;

        DrawBar(maxHealth, currentHealth, healthPositionX, healthPositionY, nameHealth, healthColor);

        DrawBar(maxMana, currentMana, manaPositionX, manaPositionY, nameMana, manaColor);
    }

    private static void DrawBar(int maxResource, int currentResource, int positionX, int positionY, string name, ConsoleColor barColor)
    {
        Console.SetCursorPosition(positionX, positionY);

        Console.Write("[");

        ConsoleColor defaultColor = Console.BackgroundColor;
        Console.BackgroundColor = barColor;

        for (int i = 0; i < currentResource; i++)
        {
            Console.Write(' ');
        }

        Console.BackgroundColor = defaultColor;

        for (int j = currentResource; j < maxResource; j++)
        {
            Console.Write(' ');
        }

        Console.Write("]");
        Console.Write(name);
    }
}
